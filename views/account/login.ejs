<title><%= title %></title>
<h1><%= title.charAt(0).toUpperCase() + title.slice(1) %></h1>

<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

    <!-- Formulario de login -->
    <form action="/account/login" method="post" class="login-form" id="loginForm">
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required>

      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <div>Password is at least 12 characters and has at least 1 uppercase character, 1 number and 1 special character.</div>

      <button type="submit">Login</button>
    </form>

    <p>¿You Don't have an Account? <a href="/account/registration">Regístrate aquí</a></p>

