<!-- Existing detailView -->
<%- detailView %>

<h3>Reviews</h3>
<% if (reviews.length > 0) { %>
  <ul>
    <% reviews.forEach(r => { %>
      <li><strong><%= r.account_firstname %></strong> (<%= new Date(r.review_date).toLocaleDateString() %>): <%= r.review_text %></li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No reviews yet. Be the first to add one!</p>
<% } %>

<% if (locals.loggedin) { %>
<form action="/inv/add-review" method="POST">
  <input type="hidden" name="inv_id" value="<%= inventoryId %>">
  <textarea name="review_text" required placeholder="Write your review"></textarea>
  <button type="submit">Submit Review</button>
</form>
<% } else { %>
<p><a href="/account/login">Log in</a> to write a review.</p>
<% } %>
